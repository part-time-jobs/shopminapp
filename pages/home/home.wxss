/* pages/home/home.wxss */

.swiper-box{
  /*1rpx=0.5px*/
  padding: 20rpx;
}
.swiper-box swiper{
  height: 200rpx;
} 
.swiper-box swiper image{
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}

/*元素加了浮动  记得父元素清楚浮动*/
.nav-box .nav{
  overflow: hidden;
  width: 2000rpx;
}
.nav-box .nav .item{
  float: left;
  width: 100rpx;
  height: 60rpx;
  line-height: 60rpx;
  border: solid 2rpx #eeeeee;
  text-align: center;
  font-size: 30rpx;
  margin-left: 20rpx;
  border-radius: 20rpx;
}
.nav-box .nav .item.current{
  color: chocolate;
}

.goods-list .item{
  /*排成一整行,取消换行*/
  display: flex;
  border-bottom: solid 2rpx #eeeeee;
}
.goods-list .item .pic{
  width: 200rpx;
  height: 200rpx;
}
.goods-list .item .pic image{
  width: 200rpx;
  height: 200rpx;
}
.goods-list .item .content{
  margin-left: 20rpx;
  padding: 30rpx 20rpx;
}
.goods-list .item .content .title{
  font-size: 32rpx;
  /*显示两行，超出省略号*/
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}
.goods-list .item .content .desc{
font-size: 24rpx;
color: #999;
margin-top: 10rpx;
}
.goods-list .item .content .price{
  font-size: 32rpx;
  margin-top: 10rpx;
}