/* pages/my/my.wxss */
page{
height: 100%;
}
.page-box{
  background: #f5f5f5;
  height: 100%;
  padding-top: 20rpx;
}
.login-info{
  display: flex;
  background: #ffffff;
  padding: 20rpx 30rpx;
}
.login-info image{
  width: 140rpx;
  height: 140rpx;
}
.login-info .login{
  margin-left: 30rpx;
}
.login-info .login .top{
  margin-top: 30rpx;
  font-size: 36rpx;
}
.login-info .desc{
  font-size: 30rpx;
  color: #999;
  margin-top: 10rpx;
}
.btn-info{
  width: 100%!important;
  padding: 0;
}

.member-box{
  margin-top: 30rpx;
  background: #ffffff;
}
.member-box .item{
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  border-bottom: solid 3rpx #eeeeee;
  padding: 0 30rpx;
}
.member-box .item .fn-right{
  float: right;
}